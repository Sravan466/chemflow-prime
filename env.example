# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=ClusterName
MONGODB_DB=chemflow

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Secret (for authentication)
JWT_SECRET=your-super-secret-jwt-key-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (if needed for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Frontend Environment Variables (for React app)
VITE_API_URL=http://localhost:3001
VITE_APP_NAME=ChemFlow Prime
